<?xml version='1.0' encoding='utf-8'?>
<widget id="com.lunwing.radio" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Rotary Radio Beta</name>
    <description>
        A Beta version of Internet Radio Rotary.
    </description>
    <author email="wing@lunwing.com" href="lunwing.com">
        Lun Wing
    </author>
    <content src="splash.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
	<plugin name="cordova-plugin-statusbar" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="browser" spec="~4.1.0" />
    <engine name="android" spec="~6.0.0" />
	
	<!-- not allow app rotate-->
	<preference name="orientation" value="portrait" />


</widget>
