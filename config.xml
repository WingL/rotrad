<?xml version='1.0' encoding='utf-8'?>
<widget id="com.lunwing.radio" version="1.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>ARC</name>
    <description>
        ARC - Australian Rotary Connection
    </description>
    <author email="admin@radioarc.org" href="www.radioarc.org">
        ARC
    </author>
    <content src="splash.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
	<plugin name="cordova-plugin-statusbar" spec="1" />
    <plugin name="cordova-plugin-music-controls" spec="1"/>

    <access origin="*" />
    <allow-intent href="http://www.radioarc.org" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:admin@radioarc.org" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="browser" spec="~4.1.0" />
    <engine name="android" spec="~6.0.0" />
	
	<!-- not allow app rotate-->
	<preference name="orientation" value="portrait" />


</widget>
